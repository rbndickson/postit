<%= render 'shared/content_title', title: 'Log in' %>

<div class='well'>
  <%= form_tag('/login', method: 'POST') do %>

    <div>
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] || '' %>
    </div>

    <div>
    <%= label_tag :password %>
    <%= text_field_tag :password, params[:password] || '' %>
    </div>
    <br/>
    <%= submit_tag 'Login', class: 'btn btn-success' %>
  <% end %>
</div>
