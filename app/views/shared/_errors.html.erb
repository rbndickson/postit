<% if submitted_form.errors.any? %>
  <div class='row'>
    <div class='alert alert-error span8' >
      <h5>The following errors have occured:</h5>
      <ul>
        <% submitted_form.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  </div>
<% end  %>
