<div>
  <%= link_to 'Postit!', root_path, :class => 'brand' %>
</div>
<ul class='nav'>
  <li class='dropdown'>
    <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
    Catagories <span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>
      <% Category.all.each do |category| %>
        <li>
          <%= link_to category.name, category_path(category) %>

        </li>
      <% end %>
      <li class='divider'></li>
      <li>
        <%= link_to(new_category_path) do %>
          <i class='icon-plus'></i>
          New Category
        <% end %>
      </li>
    </ul>
  </li>


  <% if logged_in? %>
      <li>
        <div class='nav_item btn btn-small btn-success'>
          <%= link_to 'new post', new_post_path %>
        </div>
      </li>
      <li>
        <div class='nav_item btn btn-small btn-warning'>
          <%= link_to 'Logout', logout_path %>
        </div>
      </li>
  <% else %>

    <li>
      <div class='nav_item btn btn-small btn-success'>
        <%= link_to 'Register', register_path %>
      </div>
    </li>

    <li>
      <div class='nav_item btn btn-small btn-primary'>
        <%= link_to 'Login', login_path %>
      </div>
    </li>

  <% end %>
</ul>
