<% if @post.errors.any? %>
  <div class='row'>
    <div class='alert alert-error span8' >
      <h5>The following errors have occured:</h5>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  </div>
<% end  %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description, :rows => 4 %>
  <br/>
  <%= f.label :user_id %>
  <%= f.text_field :user_id %>
  <br/>
  <%= f.submit button_text, class: 'btn btn-primary' %>
<% end %>
