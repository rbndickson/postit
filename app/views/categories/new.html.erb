<% if @category.errors.any? %>
  <div class='row'>
    <div class='alert alert-error span8' >
      <h5>The following errors have occured:</h5>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  </div>
<% end  %>

<%= form_for @category do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>
  <%= f.submit 'Add Category', class: 'btn btn-primary' %>
<% end %>
